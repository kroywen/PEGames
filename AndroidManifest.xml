<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pe.games"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="15" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".screen.MainScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity android:name=".screen.CategoriesScreen" />
        <activity android:name=".screen.AlphabeticalScreen" android:label="@string/game_book" android:windowSoftInputMode="stateAlwaysHidden" />
        <activity android:name=".screen.RandomScreen" />
        <activity android:name=".screen.MyLessonsScreen" android:label="@string/my_lessons" />
        <activity android:name=".screen.GamesScreen" android:windowSoftInputMode="stateAlwaysHidden" />
        <activity android:name=".screen.GameScreen" />
        <activity android:name=".screen.AddGameScreen" android:label="@string/add_game" android:windowSoftInputMode="stateAlwaysHidden" />
        <activity android:name=".screen.EditGameScreen" android:label="@string/edit_game" android:windowSoftInputMode="stateAlwaysHidden" />
        
    </application>

</manifest>